<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Сортировка">

        <ListPreference
            app:defaultValue="by_to_upper"
            app:entries="@array/sort_order_entries"
            app:entryValues="@array/sort_order_values"
            app:key="sort_by"
            app:title="Сортировать по"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="by_date"
            app:entries="@array/sort_by_name_entries"
            app:entryValues="@array/sort_by_name_values"
            app:key="sort_by_name_lastname"
            app:title="Сортировать по"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

    <PreferenceCategory app:title="Фильтрация">

        <ListPreference
            app:defaultValue="by_date"
            app:entries="@array/sort_by_name_entries"
            app:entryValues="@array/sort_by_name_values"
            app:key="filter"
            app:title="Сортировать по"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>



</PreferenceScreen>